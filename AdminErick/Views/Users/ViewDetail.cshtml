@model AdminErick.Models.Entities.users.UserShowList
@{
    ViewBag.Title = "ViewDetail";
}

<div>
    <hr />

        <div class="col-md-8">
            <div class="card card-user">
                <div class="image">
                    <img src="~/Content/assets/img/damir-bosnjak.jpg" alt="...">
                </div>
                <div class="card-body">
                    <div class="author">
                        <a href="#">
                            <img class="avatar border-gray" src="~/Content/assets/img/mike.jpg" alt="...">
                            <h5 class="title">@Model.UserName</h5>
                        </a>
                        <p class="description">
                            Su Rol en la entidad es de
                            @Model.RolName<br />
                            Tiene una membresía en
                            @Model.MembershipName
                        </p>
                    </div>
                </div>

                <div class="card-footer">
                    <hr>
                    <div class="button-container">
                        <div class="row">
                            <div class="col-lg-3 col-md-6 col-6 ml-auto">
                                <h5>
                                    Facebook
                                    <br>
                                    <small>nameUser</small>
                                </h5>
                            </div>
                            <div class="col-lg-4 col-md-6 col-6 ml-auto mr-auto">
                                <h5>
                                    Instagram
                                    <br>
                                    <small>nickName</small>
                                </h5>
                            </div>
                            <div class="col-lg-3 mr-auto">
                                <h5>
                                    Twitter
                                    <br>
                                    <small>-</small>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<p>
    <a class="btn btn-primary" href="~/Users/EditData/@Model.IdUser">Editar</a>
    @Html.ActionLink("Regresar al listado", "Index")
</p>
